[
    {
        "rule_id": "CIS-JUNOS-001",
        "standard": "CIS",
        "control_id": "CIS.4.1.1",
        "title": "Ensure SSH protocol version 2 is configured",
        "description": "JunOS SSH must use protocol version 2 only.",
        "vendor": "junos",
        "category": "access_control",
        "severity": "high",
        "weight": 5,
        "condition": {
            "type": "key_value_match",
            "scope": "global",
            "key": "system.services.ssh.protocol-version",
            "operator": "equals",
            "expected_value": "v2"
        },
        "remediation_text": "Set SSH to protocol version 2.",
        "remediation_command": "set system services ssh protocol-version v2",
        "cross_standard_refs": [
            "ISO27001-A.9.4.2",
            "PCI-DSS-2.2.2"
        ]
    },
